// ------------- enable singularity---------------
// this helps when running locally

singularity {
    enabled = true
    autoMounts = true
}

// ------- setup profiles
profiles {

    // ----------------------
    // Local profile: STANDARD
    // ----------------------
    standard {
        process.executor = 'local'
        process.maxForks = 10   // avoid overloading your laptop

        process {
            // Default resources for ALL processes, while working on local machine.
            cpus   = 1
            memory = '4 GB'
        }
    }

    // ----------------------
    // Eddie cluster profile
    // ----------------------
    sge_cluster {
        // Load SGE-specific cluster settings
        includeConfig "$projectDir/bin/sge_singularity.config"

        process {
            // Defaults only apply if not set in a process
            cpus   = 10
            memory = '16 GB'
            time   = '12h'
        }
    }
}
