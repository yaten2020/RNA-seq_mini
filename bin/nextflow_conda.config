// Global Conda environment
process {
    conda = "$projectDir/conda_env.yml"
}

// enable conda for nextflow
conda {
    enabled = true
}

profiles {

    // ----------------------
    // Local profile: STANDARD
    // ----------------------
    standard {
        process.executor = 'local'
        process.maxForks = 2   // avoid overloading your laptop

        process {
            // Default resources for ALL processes
            cpus   = 1
            memory = '4 GB'
        }
    }

    // ----------------------
    // SGE cluster profile
    // ----------------------
    sge_cluster {
        // Load all Eddie-specific cluster settings
        includeConfig "$projectDir/bin/sge_conda.config"
        process {
            // Defaults only apply if not set in a process
            cpus   = 10
            memory = '16 GB'
            time   = '12h'
        }
    }
}
